# =============================================================================
# ENVIRONMENT CONFIGURATION - PvE On-Chain Game (Abstract Chain Version)
# =============================================================================
# Copy this file to .env and fill in your actual values

# =============================================================================
# ABSTRACT CHAIN CONFIGURATION
# =============================================================================

# Abstract Chain RPC URLs (Ethereum-compatible L2)
ABSTRACT_MAINNET_RPC_URL=https://api.mainnet.abs.xyz
ABSTRACT_TESTNET_RPC_URL=https://api.testnet.abs.xyz
RPC_URL=https://api.testnet.abs.xyz

# Smart Contract Address (will be set after deployment)
CONTRACT_ADDRESS=0x1234567890123456789012345678901234567890

# Admin wallet private key (for backend operations)
# WARNING: Keep this secret and never commit to version control
ADMIN_PRIVATE_KEY=0xYOUR_ADMIN_PRIVATE_KEY_HERE

# =============================================================================
# BACKEND CONFIGURATION
# =============================================================================

# Server Configuration
NODE_ENV=development
PORT=3001

# Security
JWT_SECRET=your-super-secure-jwt-secret-key-here-make-it-long-and-random
ADMIN_API_KEY=your-admin-api-key-for-protected-endpoints

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Gas Configuration (Abstract Chain optimized)
GAS_PRICE_GWEI=1
GAS_LIMIT_BUFFER=1.2

# CORS Configuration
FRONTEND_URL=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=logs/app.log
DEBUG=true

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================

# React App Environment Variables (must start with REACT_APP_)
REACT_APP_CONTRACT_ADDRESS=0x1234567890123456789012345678901234567890
REACT_APP_BACKEND_URL=http://localhost:3001
REACT_APP_NETWORK_NAME=abstract-testnet
REACT_APP_CHAIN_ID=11124

# =============================================================================
# OPTIONAL: EXTERNAL SERVICES
# =============================================================================

# Database (if you want to add persistence later)
DATABASE_URL=postgresql://username:password@localhost:5432/pve_game
REDIS_URL=redis://localhost:6379

# Webhooks
WEBHOOK_SECRET=your-webhook-secret-here
DEPOSIT_CONFIRMATION_WEBHOOK_URL=https://your-webhook-url.com/webhook

# Monitoring
SENTRY_DSN=https://your-sentry-dsn-here@sentry.io/project-id
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your-webhook-url

# =============================================================================
# DEVELOPMENT ONLY
# =============================================================================

# Mock blockchain for testing (set to true for local development without blockchain)
MOCK_BLOCKCHAIN=false

